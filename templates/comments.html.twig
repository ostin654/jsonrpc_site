{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col p-3 mt-5">
            <h1>{{ title }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col p-3">
            {{ form_start(form) }}
                {{ form_help(form) }}

                {{ form_widget(form) }}

                <button type="submit", class="btn btn-primary">Submit</button>
            {{ form_end(form) }}
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="row">
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        <div class="col p-3">
            {% if comments|length > 0 %}
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Name</th>
                        <th scope="col">Notes</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                    <tr>
                        <td>{{ comment.createdAt|date }}</td>
                        <td>{{ comment.name }}</td>
                        <td>{{ comment.notes }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                No comments yet... Leave the first!
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
